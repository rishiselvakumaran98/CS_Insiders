	<div class="ui main text container">
	   	<div class="ui menu">
	   		<div class="huge header item">Latest Blogs</div>
	   		<div class="right menu"><a href="/blogs/new" class="ui blue basic button">New Blog</a></div>
	   		<!-- <i class="fa fa-plus-square-o" aria-hidden="true"></i> -->
	   	</div>
	    <div class="ui top attached segment">
	<div class="ui divided items" id="blog-grid">
		<% blogs.forEach((blog)=>{ %>
		 <div class="item">
		    <div class="image">
		      <img src="<%= blog.image %>">
		    </div>
		    <div class="content">
		      <a class="header"><%= blog.title %></a>
		      
		      <div class="meta">
		      	<button class="ui button">
		      		<a href="/blogs/<%=blog.topic%>"><%=blog.topic%></a>
		      	</button>
		      	<div class="meta"></div>
		        <span class="cinema"><%= blog.created.toDateString() %></span>
		        <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= blog.likes.length %></span>
		        <span class="badge label-primary"><i class="fas fa-comments"></i> <%= blog.comments.length %></span>
		      </div>
		      <div class="description">
		        <p><%= (htmlToText.fromString(blog.description,{})).substring(0,100);%> ...</p>
		        <!-- .substring(0,100); -->
		      </div>
		      <div class="extra">
		        <a href="/blogs/<%=blog._id %>">
		        	<div class="ui animated violet basic button" tabindex="0">
					  <div class="visible content">Read More</div>
					  <div class="hidden content">
					    <i class="right arrow icon"></i>
					  </div>
					</div>
		        </a>
		      </div>
		    </div>
		  </div>
		<% }); %>
	</div>
	</div>
	</div>


	

<%-include("../partials/footer")%>
