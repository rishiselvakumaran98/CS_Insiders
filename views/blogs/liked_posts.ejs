<%-include("../partials/header")%>

	<header class="jumbotron">
         <div class="container">
             <h1><i class="fas fa-heart"></i> My favourite Blogs</h1>
         </div>
     </header>

	<div class="ui main text container">
	   	<div class="ui menu">
	   		<div class="huge header item">Favourite Blogs</div>
	   		<div class="right menu"><a href="/blogs/new" class="ui blue basic button">New Blog</a></div>
	   		<!-- <i class="fa fa-plus-square-o" aria-hidden="true"></i> -->
	   	</div>
	    <div class="ui top attached segment">
			<div class="ui divided items" id="blog-grid">
				<% blogs.forEach((blog)=>{ %>
					<%if(blog.likes.includes(user._id)){%>
						 <div class="item">
						    <div class="image">
						      <img src="<%= blog.image %>">
						    </div>
						    <div class="content">
						      <a class="header"><%= blog.title %></a>
						      <div class="meta">
						        <span class="cinema"><%= blog.created.toDateString() %></span>
						      </div>
						      <div class="description">
						        <p><%= (htmlToText.fromString(blog.description,{})).substring(0,100);%> ...</p>
						        <!-- .substring(0,100); -->
						      </div>
						      <div class="extra">
						        <a href="/blogs/<%=blog._id %>">
						        	<div class="ui animated blue basic button" tabindex="0">
									  <div class="visible content">Read More</div>
									  <div class="hidden content">
									    <i class="right arrow icon"></i>
									  </div>
									</div>
						        </a>
						      </div>
						    </div>
						  </div>
					<%}%>
				<% }); %>
			</div>
		</div>
	</div>
<%-include("../partials/footer")%>